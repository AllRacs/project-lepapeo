    int idd = usu.DgetOIDfromEmail(User.Identity.Name);
}

<br />
<br />
<h3 class="w3-center w3-margin-top">Bienvenido @resCen.ReadOID(idd).Nombre</h3>
<hr />
<div class="w3-center">
    <a style="width: 20%;" class="btn btn-default w3-crimson w3-hover-shadow w3-padding-16 w3-fontOpenSans" href="~/Reserva/ReservasNoFinalizadas">Reservas no finalizadas</a>
    <a style="width: 20%;" class="btn btn-default w3-crimson w3-hover-shadow w3-padding-16 w3-fontOpenSans" href="~/Reserva/ReservasFinalizadas">Reservas finalizadas</a>
