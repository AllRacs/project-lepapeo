@model LePapeo.Models.OpinionViewModel
@using LePapeoGenNHibernate.EN.LePapeo;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<RestauranteEN> listaRestaurante = (List<RestauranteEN>)ViewData["listaRestaurante"];

    List<SelectListItem> listItems = new List<SelectListItem>();
    foreach (RestauranteEN e in listaRestaurante)
    {
        {
            String txt =  e.Id.ToString();
            listItems.Add(new SelectListItem
            {
                Text = txt,
                Value = e.Id.ToString()
            });
        }
    }

    List<RegistradoEN> listaRegistrado = (List<RegistradoEN>)ViewData["listaRegistrado"];

    List<SelectListItem> listItems2 = new List<SelectListItem>();
    foreach (RegistradoEN e in listaRegistrado)
    {
        {
            String txt2 = e.Id.ToString();
            listItems2.Add(new SelectListItem
            {
                Text = txt2,
                Value = e.Id.ToString()
            });
        }
    }

}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>OpinionViewModel</h4>
    <hr />
