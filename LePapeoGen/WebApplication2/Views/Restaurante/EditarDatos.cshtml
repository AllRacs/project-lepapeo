@model WEBLEPAPEO.Models.RestauranteViewModel
@using LePapeoGenNHibernate.EN.LePapeo;

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<TipoCocinaEN> listaTipoCocina = (List<TipoCocinaEN>)ViewData["listaTipoCocina"];

    List<SelectListItem> listItems = new List<SelectListItem>();
    foreach (TipoCocinaEN e in listaTipoCocina)
    {
        {
            String txt = e.Tipo;
            listItems.Add(new SelectListItem
            {
                Text = txt,
                Value = e.Tipo
            });
        }
    }
}

<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">
    <!-- The Grid -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="w3-row">
            <!-- Left Column -->
            <div class="w3-col m5">
                <!-- Profile -->
                <div class="w3-card w3-round w3-white">
                    <div class="w3-container">
                        <h4 class="w3-center">@Html.DisplayFor(model => model.Nombre)</h4>
                        <p class="w3-center"><img src="../../imgs/res.jpg" class="w3-circle" style="height:106px;width:106px" alt="Avatar"></p>
                    </div>
                    <hr />

                    <div class="form-horizontal w3-margin-left ">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Fecha_inscripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Fecha_inscripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Fecha_inscripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Fecha_apertura, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Fecha_apertura, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Fecha_apertura, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Max_comen, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Max_comen, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Max_comen, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Current_comen, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Current_comen, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Current_comen, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Precio_medio, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Precio_medio, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Precio_medio, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("Tipo", listItems, "Selecciona Tipo", new { @class = "form-control" })
                            </div>
                        </div>

                    </div>
                </div>
                <br>
                <!-- End Left Column -->
            </div>

            <!-- Middle Column -->
            <div class="w3-col m6">

                <div class="w3-row-padding">
                    <div class="w3-col m12">
                        <div class="w3-card w3-round w3-white">
                            <div class="w3-container w3-padding">
                                <h5><b>Descripción:</b></h5>
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "w3-border w3-padding w3-col m12" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="w3-row-padding w3-margin-top">
                    <div class="w3-col m12">
                        <div class="w3-card w3-round w3-white">
                            <div class="w3-container w3-padding">
                                <h5><b>Menú:</b></h5>
                                @Html.EditorFor(model => model.Menu, new { htmlAttributes = new { @class = "w3-border w3-padding w3-col m12" } })
                                @Html.ValidationMessageFor(model => model.Menu, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="w3-card w3-round w3-white w3-center w3-margin-top w3-margin-left">
                    <div class="w3-container">
                        <p>Foto:</p>
                        <img class="w3-round-large w3-margin-bottom" src="../../imgs/res.jpg" alt="Foto del restaurante" style="width:90%;">
                    </div>
                </div>

                <div class="form-group w3-margin-top">
                    <div class="w3-center">
                        <input type="submit" value="Guardar Cambios" class="btn btn-default" />
                    </div>
                </div>

                <div class="form-group w3-margin-top">
                    <div class="w3-center">
                        <button><a class="btn btn-default" href="~/Direccion/Create">Agregar Direccion</a></button>
                    </div>
                </div>

                <div class="form-group w3-margin-top">
                    <div class="w3-center">
                        <button><a class="btn btn-default" href="~/Registrado/MisNotificaciones">Mis notificaciones</a></button>
                    </div>
                </div>

                <!-- End Middle Column -->
            </div>

            <!-- End Grid -->
        </div>
    }
    <!-- End Page Container -->
</div>
<br>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
